.signup-main
  .signup-main__contents
    %h2.signup-main__head
      ユーザー情報登録
    = form_for(resource, as: resource_name, url: registration_path(resource_name, class: "signup-main__inf")) do |f|
      .signup-main__input
        .signup-main__inf
          = render "devise/shared/error_messages", resource: resource
          = f.label :nickname,"ニックネーム", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = f.text_field :nickname, placeholder: "テスト", class: "signup-main__field"
        .signup-main__inf
          = f.label :lastname,"お名前(全角)", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          .signup-main__person-name
            = f.text_field :lastname, placeholder: "花田", class: "signup-main__field signup-main__field--side"
            = f.text_field :firstname, placeholder: "太郎", class: "signup-main__field"
        .signup-main__inf
          = f.label :lastname,"お名前カナ(全角)", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          .signup-main__person-name
            = f.text_field :last_hurigana, placeholder: "ハナダ", class: "signup-main__field signup-main__field--side"
            = f.text_field :first_hurigana, placeholder: "タロウ", class: "signup-main__field"

        .signup-main__inf
          = f.label :email,"メールアドレス", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = f.email_field :email, placeholder: "sample@gmail.com", class: "signup-main__field"

        .signup-main__inf
          = f.label :password,"パスワード", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = f.password_field :password, placeholder: "7文字以上", class: "signup-main__field"

        .signup-main__form-inf
          = f.label :password_confirmation,"パスワード確認", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          = f.password_field :password_confirmation, placeholder: "7文字以上", class: "signup-main__field"

        .signup-main__inf
          = f.label :birthday,"生年月日", class: "signup-main__label"
          %span.signup-main__require
            必須
          %br
          != sprintf(f.date_select(:birthday,with_css_classes:'signup-main__birthday', prompt:"--",use_month_numbers:true,class: 'signup-main__birthday', start_year:Time.now.year, end_year:1900, date_separator:'%s'),'年','月')+"日"
        = f.submit "次へ", class: "signup-main__submit"