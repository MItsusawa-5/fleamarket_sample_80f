%body
  %header.taitolhead
    .taitolhead__headna
      .taitolhead__headna__headmai
        %h1.taitolhead__headna__headmai__icon1
          = link_to '#' do
            = image_tag ("logo.png") 
        .taitolhead__headna__headmai__kenbox
          %input{type: "text", class: "taitolhead__headna__headmai__input-box", "placeholder": "キーワードから探す"}
          .taitolhead__headna__headmai__input-isu
            = link_to '#' do
              = image_tag ("icon-search 1.png")
    .taitolhead__navi
      %ul.taitolhead__navi__list
        %li.taitolhead__navi__list__li1 
          = link_to '#' do
            %a#btn1 カテゴリー
        %li.taitolhead__navi__list__li2
          = link_to '#' do
            %a#btn2 ブランド
.form
  .contents
    = form_with model:@item, local:true do |f|
      .images
        .constraint
          .imageindicate
            出品画像
          .imagemust 
            必須
        .hidden-content
          = f.fields_for :images do |i|
            = i.file_field :image, class: "hidden-field"
            %input{class:"hidden-field", type: "file", name: "item[images_attributes][1][image]", id: "item_images_attributes_1_image" }
            %input{class:"hidden-field", type: "file", name: "item[images_attributes][2][image]", id: "item_images_attributes_2_image" }
            %input{class:"hidden-field", type: "file", name: "item[images_attributes][3][image]", id: "item_images_attributes_3_image" }
      .name
        .item
          .iteminfo
            .iteminfo__name
              商品名
            .iteminfo__must
              ※必須
          = f.text_field :name, placeholder:"商品名記載",class: "nameform"
        .explain
          .item
            .iteminfo
              .iteminfo__name
                説明
              .iteminfo__must
                ※必須
            = f.text_area :explain, placeholder:"詳細記載",class: "explainform" 
      .category 
        .item
          .iteminfo
            .iteminfo__name
              カテゴリー
            .iteminfo__must
              ※必須
          = f.text_field :category_id, placeholder:"指定なし",class: "nameform"        
      .brand
        .item
          .iteminfo
            .iteminfo__name
              ブランド
            .iteminfo__must
              ※任意
          = f.text_field :brand_id, placeholder:"指定なし",class: "nameform"
      .status
        .item
          .iteminfo
            .iteminfo__name
              商品の状態
            .iteminfo__must
              ※必須
          = f.text_field :status, placeholder:"指定なし",class: "nameform"
      .area
        .item
          .iteminfo
            .iteminfo__name
              発送元の地域
            .iteminfo__must
              ※必須
          = f.text_field :area, placeholder:"指定なし",class: "nameform"
      .limit
        .item
          .iteminfo
            .iteminfo__name
              発送までの日数
            .iteminfo__must
              ※必須
          = f.text_field :limit, placeholder:"指定なし",class: "nameform"   
      .delivery_cost 
        .item
          .iteminfo
            .iteminfo__name
              配送料の負担
            .iteminfo__must
              ※必須
          = f.text_field :delivery_cost , placeholder:"指定なし",class: "nameform" 
      .price
        .item
          .iteminfo
            .iteminfo__name
              価格
            .iteminfo__must
              ※必須
          = f.text_field :price , placeholder:"指定なし",class: "nameform"            

      .new
        = f.submit "出品する",class: "newbtn"            
